<Window x:Class="ChatClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded" Closing="Window_Closing">
    <Grid>
        <Grid.ColumnDefinitions>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="tbUserName" HorizontalAlignment="Left" Height="35" Margin="230,10,0,0" TextWrapping="Wrap" Text="Имя Пользователя" VerticalAlignment="Top" Width="544" RenderTransformOrigin="-2.883,-2" FontSize="20"/>
        <Button x:Name="bConDiscon" Click="Button_Click" Content="Connect" HorizontalAlignment="Left" Margin="2,10,0,0" VerticalAlignment="Top" Width="197" Height="35"/>
        <ListBox x:Name="lbChat" HorizontalAlignment="Left" Height="202" VerticalAlignment="Top" Width="772" Margin="2,50,0,0" SelectionChanged="lbChat_SelectionChanged" Grid.ColumnSpan="2"/>
        <TextBox x:Name="tbMessage" HorizontalAlignment="Left" Height="138" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="772" Margin="2,271,0,0" Grid.ColumnSpan="2" KeyDown="tbMessage_KeyDown"/>

    </Grid>
</Window>
